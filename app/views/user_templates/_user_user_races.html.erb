<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    User Races

    <a data-toggle="collapse" href="#user_user_races_new_form">
      Add user race
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.user_races.each do |user_race| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/user_races/<%= user_race.id %>">
          <%= user_race.user_id %>
        </a>

      </li>
    <% end %>

  </ul>
</div>
