<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Races

    <a data-toggle="collapse" href="#event_races_new_form">
      Add race
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @event.races.each do |race| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/races/<%= race.id %>">
          <%= race.user_id %>
        </a>

        <a href="/delete_race_from_event/<%= race.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="event_races_new_form">
        <%= render partial: "event_templates/event_races_new_form" %>
      </div>
    </div>

  </ul>
</div>
