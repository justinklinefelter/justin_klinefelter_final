<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Race #<%= @race.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/races" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/races/<%= @race.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit race
        </a>
      </div>

      <div class="col">
        <a href="/delete_race/<%= @race.id %>" class="btn btn-block btn-outline-secondary">
          Delete race
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @race.user_id %>
      </dd>

      <dt>
        Location
      </dt>
      <dd>
        <div>
          <%= render partial: "race_templates/one_photo_map" %>
        </div>
      </dd>

      <dt>
        Event
      </dt>
      <dd>
        <% if @race.event.present? %>
          <a href="/events/<%= @race.event_id %>">
            <%= @race.event.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@race.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@race.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "race_templates/race_user_races" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "race_templates/race_users" %>
  </div>
</div>
