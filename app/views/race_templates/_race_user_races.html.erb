<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    User Races

    <a data-toggle="collapse" href="#race_user_races_new_form">
      Add user race
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @race.user_races.each do |user_race| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/user_races/<%= user_race.id %>">
          <%= user_race.user_id %>
        </a>

        <a href="/delete_user_race_from_race/<%= user_race.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="race_user_races_new_form">
        <%= render partial: "race_templates/race_user_races_new_form" %>
      </div>
    </div>

  </ul>
</div>
