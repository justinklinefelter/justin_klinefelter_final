<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All races
    </h1>

    <a href="/races/new" class="btn btn-block btn-outline-secondary">
      Add a new race
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "race_templates/races_search_form" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "race_templates/all_photos_map" %>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Location
        </th>

        <th>
          Event
        </th>

        <th>
          Year
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @races.each do |race| %>
      <tr>
        <td>
          <%= race.id %>
        </td>

        <td>
          <%= race.location_id %>
        </td>

        <td>
          <% if race.event.present? %>
            <a href="/events/<%= race.event.id %>">
              <%= race.event.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= race.year_id %>
        </td>

        <td>
          <%= race.name %>
        </td>

        <td>
          <%= time_ago_in_words(race.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(race.updated_at) %> ago
        </td>

        <td>
          <a href="/races/<%= race.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @races, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
