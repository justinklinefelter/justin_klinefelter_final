<h1>
  Add a new comment
</h1>


<hr>

<form action="/create_comment" method="post">

  <div class="form-group">
    <label for="body">
      Body
    </label>

    <input type="text" id="body" name="body" class="form-control">
  </div>

  <div class="form-group">
    <label for="commenter_id">
      Commenter
    </label>

    <%= select_tag(:commenter_id, options_from_collection_for_select(User.all, :id, :email, @comment.commenter_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="user_race_id">
      User race
    </label>

    <%= select_tag(:user_race_id, options_from_collection_for_select(UserRace.all, :id, :user_id, @comment.user_race_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create comment
  </button>
</form>

<hr>

<a href="/comments">
  Go back
</a>
